<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wxy.exoskeleton.mapper.DetailedInfoMapper">
        <resultMap id="BaseResultMap" type="com.wxy.exoskeleton.model.DetailedInfo">
            <id column="id" property="id" jdbcType="INTEGER"/>
            <result column="uid" property="uid" jdbcType="INTEGER"/>
            <result column="number" property="number" jdbcType="VARCHAR"/>
            <result column="address" property="address" jdbcType="VARCHAR"/>
            <result column="date" property="date" jdbcType="DATE"/>
        </resultMap>

    <insert id="insertDInfoSelective" parameterType="com.wxy.exoskeleton.model.AllInfo">
        insert into detailedmsg (uid, number, address, date)
        values
        (#{uid,jdbcType=INTEGER}, #{number,jdbcType=VARCHAR}, #{address,jdbcType=VARCHAR}, #{date,jdbcType=DATE})
    </insert>

    <select id="getDInfoByUid" resultMap="BaseResultMap">
        select
            id, uid, number, address, date
        from detailedmsg
        where uid = #{uid,jdbcType=INTEGER}
    </select>

    <update id="updateDInfoByPrimaryKeySelective" parameterType="com.wxy.exoskeleton.model.AllInfo">
        update detailedmsg
        <set>
            <if test="uid != null">
                uid = #{uid,jdbcType=int},
            </if>
            <if test="number != null">
                number = #{number,jdbcType=VARCHAR},
            </if>
            <if test="address != null">
                address = #{address,jdbcType=VARCHAR},
            </if>
            <if test="totalTime != null">
                totalTime = #{totalTime,jdbcType=DOUBLE},
            </if>
            <if test="date != null">
                date = #{date,jdbcType=DATE},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>

    <delete id="deleteDInfo" parameterType="java.lang.Integer">
        delete from detailedmsg
        where uid = #{id,jdbcType=INTEGER}
    </delete>

</mapper>